// Generate URLs for the same page in different languages
const getLocalizedUrl = (langCode: string) => {
  if (langCode === 'en') {
    return `/${slug}`;
  }
  return `/${langCode}/${slug}`;
};
---

<div class="language-switcher">
  <div class="current-language">
    <span class="flag">{languages.find(lang => lang.code === currentLang)?.flag}</span>
    <span class="name">{languages.find(lang => lang.code === currentLang)?.name}</span>
    <span class="arrow">â–¼</span>
  </div>

  <div class="language-dropdown">
    {languages.map(lang => (
      <a
        href={getLocalizedUrl(lang.code)}
        class={`language-option ${lang.code === currentLang ? 'active' : ''}`}
      >
        <span class="flag">{lang.flag}</span>
        <span class="name">{lang.name}</span>
      </a>
    ))}
  </div>
</div>

<style>
  .language-switcher {
    position: relative;
    display: inline-block;
  }

  .current-language {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: var(--sl-color-bg-nav);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.375rem;
    cursor: pointer;
    font-size: 0.875rem;
    transition: background-color 0.2s;
  }

  .current-language:hover {
    background: var(--sl-color-gray-6);
  }

  .flag {
    font-size: 1.1em;
  }

  .arrow {
    font-size: 0.7em;
    transition: transform 0.2s;
  }

  .language-switcher:hover .arrow {
    transform: rotate(180deg);
  }

  .language-dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: var(--sl-color-bg-nav);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.375rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-0.5rem);
    transition: all 0.2s;
    z-index: 1000;
    margin-top: 0.25rem;
  }

  .language-switcher:hover .language-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .language-option {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    text-decoration: none;
    color: var(--sl-color-text);
    font-size: 0.875rem;
    transition: background-color 0.2s;
  }

  .language-option:hover {
    background: var(--sl-color-gray-6);
  }

  .language-option.active {
    background: var(--sl-color-accent-low);
    color: var(--sl-color-accent);
  }
</style>
